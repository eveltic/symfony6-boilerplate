{% extends 'app/frontend/security/_template.html.twig' %}
{%block title %}Login Check{% endblock %}
{% block body %}
    <h2>Hi! You are about to login to ...</h2>
    <!-- for instance, use a form with hidden fields to create the POST request -->
    <form action="{{ path('app_frontend_security_login_link_check') }}" method="POST">
        <input type="hidden" name="expires" value="{{ expires }}">
        <input type="hidden" name="user" value="{{ user }}">
        <input type="hidden" name="hash" value="{{ hash }}">
        <button type="submit">Continue</button>
    </form>
{% endblock %}